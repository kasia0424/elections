<h1>Login</h1>
<%= form_for @user_session, :as => :user_session, :url => { :action => "create" }, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.label :login, :class => 'col-sm-2 control-label' %>
			<div class="col-sm-10">
      	<%= f.text_field :login, :class => 'form-control' %>
			</div>
		</div>
    <div class="form-group">
      <%= f.label :password, :class => 'col-sm-2 control-label' %>
			<div class="col-sm-10">
      	<%= f.password_field :password, :class => 'form-control' %>
			</div>
		</div>
    <div class="form-group">
    	<%= f.label :remember_me, :class => 'col-sm-2 control-label' %>
			<div class="col-sm-10">
				<%= f.check_box :remember_me, :class => 'form-control' %>
			</div>
		</div>
    <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
      	<%= f.submit "Login", :class => "btn btn-primary" %>
			</div>
		</div>
<% end %>
